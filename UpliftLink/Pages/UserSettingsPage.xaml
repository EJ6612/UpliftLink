<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UpliftLink.Pages.UserSettingsPage">

    <VerticalStackLayout Padding="10" Spacing="10">

        <Label Text="Settings"
                        FontSize="Title"
                        VerticalTextAlignment="Start"
                        HorizontalTextAlignment="Start" />

       <Button x:Name="IncomingPreferenceButton"
        Text="Incoming Messages Preference" 
        Clicked="IncomingPreferenceButton_Clicked"/>
        
        <Button x:Name="OutgoingEditButton"
        Text="Edit Outgoing Messages" 
        Clicked="OutgoingEditButton_Clicked"/>

    </VerticalStackLayout>
</ContentPage>